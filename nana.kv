ScreenManager:
    id: screen_manager
    MDScreen:
        id: principal
        name: 'MDScreen'
        manager: 'screen_manager'
    PersonScreen:
        id: person_screen
        name: 'PersonScreen'
        manager: 'screen_manager'
    SmsScreen:
        id: sms_screen
        name: 'SmsScreen'
        manager: 'screen_manager'

# ============================================================================================
#  >> VENTANA PRINCIPAL
# ============================================================================================
<MDScreen>:
    MDLabel:
        text: "NANA"
        color: 0,0,0
        font_size: "30sp"
        pos_hint : {'center_y': 0.95}
        halign: 'center'
        bold: True
        font_family: 'niramit'
# --------------------------------------------------------------------------------------------
    MDFloatingActionButton:
        icon: "account"
        icon_color: "white"
        theme_icon_color: "Custom"
        pos_hint : {'center_x': 0.95, 'center_y': 0.95}
        size_hint: 0.075, 0.07
        icon_size_hint: "80sp"
        padding: 5
        on_release: app.root.current = 'PersonScreen'
# --------------------------------------------------------------------------------------------
    MDRectangleFlatButton:
        text: "Help"
        text_color: "black"
        line_color: "black"
        md_bg_color:[1,0,0,1]
        pos_hint : {'center_x': 0.1, 'center_y': 0.95}
        size_hint: 0.05, 0.015
        on_press: app.call()
# --------------------------------------------------------------------------------------------
    MDLabel:
        text: "Bienvenido persona"
        color: 0,0,0
        font_size: "20sp"
        pos_hint : {'center_y': 0.85}
        halign: 'center'
        font_family: 'khmer'
# ============================================================================================
#  >> MICROFONO
# --------------------------------------------------------------------------------------------
    MDFloatingActionButton:                         # Boton del microfono
        icon: "microphone"
        icon_color: "white"
        pos_hint : {'center_x': 0.5, 'center_y': 0.70}
        on_press : app.callback()
        size_hint: 0.25, 0.22
        icon_size: "120sp"
        border: 0,0,0,0
# --------------------------------------------------------------------------------------------
    MDLabel:                                        # Mensaje de funcion
        text: "Presione aqui y habla"
        color: 0,0,0
        font_size: "20sp"
        pos_hint : {'center_y': 0.55}
        halign: 'center'
        font_family: 'khmer'
# --------------------------------------------------------------------------------------------
    MDTextField:
        id: data
        hint_text: "多Que desea buscar?"
        helper_text_mode: "on_focus"
        color_mode: 'accent'
        mode: "rectangle"
        pos_hint : {'center_x': 0.4, 'center_y': 0.45}
        max_text_length: 20
        size_hint: 0.6, 0.1
        icon_right: "android"
# --------------------------------------------------------------------------------------------
    MDFloatingActionButton:
        icon: "magnify"
        icon_color: "white"
        line_color: "green"
        on_press: app.search()
        pos_hint : {'center_x': 0.8, 'center_y': 0.45}
# --------------------------------------------------------------------------------------------
    MDFloatingActionButton:
        icon: "whatsapp"
        icon_color: "white"
        theme_icon_color: "Custom"
        pos_hint : {'center_x': 0.9, 'center_y': 0.1}
        size_hint: 0.075, 0.07
        icon_size_hint: "80sp"
        padding: 5
        on_release: app.root.current = 'SmsScreen'
